{
  "extends": "../../tsconfig.base.json",
  "references": [],
  "compilerOptions": {
    "outDir": "dist-dev",
    "rootDir": ".",
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "temp/.tsbuildinfo",
    "jsx": "react-jsx",
    "checkJs": true,
    "allowJs": true,
    "lib": ["DOM", "ES2022"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "e2e/**/*.ts",
    "vite.config.ts",
    "samples/**/*.js",
    "samples/**/*.d.ts"
  ]
}
